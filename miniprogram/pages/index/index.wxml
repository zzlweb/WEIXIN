      <import src="/common.wxml" />
      <template is="loadmore" data="{{nomore}}" />
</block> -->

<van-transition show="{{ scrollTop > 500 }}" duration="600" name="fade">
      <view class="totop" bindtap="gotop">
            <image  lazy-load src="/images/toTop.svg"></image>
      </view>
</van-transition>

