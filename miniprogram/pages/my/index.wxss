/* miniprogram/pages/my/index.wxss */
.top_user_box{
    border-bottom: 1rpx solid rgba(0,0,0,.12);
    height: 260rpx;
    padding: 0 40rpx;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    background-color: #fff;
}

.top_user_box_left .top_user_name{
    font-size: 30rpx;
    color: #000;
}

.top_user_box_left .top_user_name_button{
    border: 1rpx solid #5063c2;
    width: 300rpx;
    background-color: #fff;
    color: #5063c2;
    font-size: 28rpx;
}

.top_user_box_left .top_user_name_bottom{
    font-size: 28rpx;
    color: #666;
    margin-top: 25rpx;
}

.top_user_box_right .avator image{
    width: 120rpx;
    height: 120rpx;
}

.top_user_box_right .avator .userinfo-avatar{
    border-radius: 50%;
}

.user_center{
    justify-content: space-around;
    height: 200rpx;
    background-color: #fff;
    align-items: center;
}

.user_center .user_center_item {
    align-items: center;
    font-size: 28rpx;
}

.user_center .user_center_item image{
    width: 60rpx;
    height: 60rpx; 
    margin-bottom: 10rpx;
}
