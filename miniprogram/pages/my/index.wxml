<!-- miniprogram/pages/my/index.wxml -->
<view class="personal" style="padding-top: {{ navigationBarAndStatusBarHeight }}">
  <nav-bar navbar-data="个人中心" navigation-background-color="#5063c2"></nav-bar>
  <view class="top_user_box flex-row">
    <view class="top_user_box_left flex-col">
      <button class="top_user_name_button"  wx:if="{{!userInfo}}" open-type="getUserInfo" bindtap="bindGetUserInfo">
        授权登录
      </button>
      <view class="top_user_name" wx:if="{{userInfo}}">
        {{userInfo.nickName}}
      </view>
      <view class="top_user_name_bottom" hover-stop-propagation="false">
        一键登录，体验所有功能
      </view>
    </view>
    <view class="top_user_box_right" hover-class="none" hover-stop-propagation="false">
      <view class="avator">
        <image wx:if="{{ userInfo }}" bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
        <image  wx:if="{{!userInfo}}" src="/images/avator.png"></image>
      </view>
    </view>
  </view>
  <!-- 我的发布 我的购买 帮助中心 -->
  <view class="flex-row user_center">
    <view class="user_center_item flex-col">
      <image src="/images/fabu.svg"></image>
      <view>我的发布</view>
    </view>
    <view class="user_center_item flex-col">
      <image src="/images/goumai.svg"></image>
      <view>我的购买</view>
    </view>
    <view class="user_center_item flex-col">
      <image src="/images/helpcenter.svg"></image>
      <view>帮助中心</view>
    </view>
  </view>
</view>