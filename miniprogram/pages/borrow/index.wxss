/* miniprogram/pages/publish/index.wxss */
.book_item {
  background-color: #fff;
  height: 140rpx;
  align-items: center;
  padding-left: 20rpx;
}

.book_item .img_box{
  position: relative;
  margin-right: 40rpx;
}

.img_box .text{
  color: rgb(247, 27, 27);
  position: absolute;
  font-size: 20rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.book_item_image {
  width: 120rpx;
  height: 120rpx;
}

.book_item_text {
  justify-content: center;
  font-size: 28rpx;
}

.book_item_text > view:first-child {
  margin-bottom: 20rpx;
}

.book_item_author {
  font-size: 24rpx;
  color: #666;
}

.delBtn {
  background-color: rgb(248, 72, 72);
  color: #fff;
  justify-content: center;
  align-items: center;
  line-height: 100%;
  font-size: 28rpx;
  width: 130rpx;
  height: 140rpx;
}
