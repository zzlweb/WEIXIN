/* miniprogram/pages/search/index.wxss */
page{
  width: 100%;
  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
}

.search_content_box {
  align-items: center;
  justify-content: center;
  position: relative;
}

.search_content_box van-field{
  margin: 40rpx 160rpx 0 40rpx ;
}

.search_content_box .van-cell {
  border-radius: 10rpx;
}

.search_ico {
  width: 32rpx;
  height: 32rpx;
  margin: 8rpx 12rpx 0;
}

van-button {
  position: absolute;
  right: 40rpx;
  top: 40rpx;
}

.list_grid {
  margin: 0 40rpx;
  justify-content: space-between;
}


.list_grid .borrow_name  {
  font-size: 24rpx;
  margin-right: 40rpx;
  color: rgb(119, 118, 118);
}

.list_grid_box {
  height: 400rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-top: 30rpx;
  width: 48%;
  max-width: 48%;
}

.list_grid_box .list_box_img {
  height: 180rpx;
  width: 200rpx;
  margin: 20rpx auto;
  position: relative;
}

.list_grid_box .list_box_img .tags {
  color: rgb(247, 27, 27);
  position: absolute;
  font-size: 20rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.list_grid_box .list_box_img image {
  width: 100%;
  height: 100%;
}

.list_grid_box .list_box_title {
  font-size: 32rpx;
  color: #000;
}

.list_box_author {
  font-size: 24rpx;
  color: rgb(119, 118, 118);
}

.list_box_bottom image {
  width: 40rpx;
  height: 40rpx;
}

.list_box_bottom {
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  line-height: 60rpx;
}

.list_box_money {
  color: red;
  font-size: 28rpx;
  font-weight: bold;
}

.list_box_author {
  margin-bottom: 20rpx;
  padding-right: 20rpx;
  font-size: 24rpx;
  color: rgb(119, 118, 118);
  justify-content: space-between;
}
